[User]
  name = NAME
  email = EMAIL

[github]
  user = GITHUB_USER

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[alias]
  b = branch
  ba = branch -a
  br = branch -r
  cat = cat-file -p
  ci = commit -a
  co = checkout
  d = diff
  gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  info = config --list
  st = status
  up = pull --rebase
  w = worktree
  sw = switch

[apply]
  whitespace = nowarn

[core]
  editor = vim
  pager = less
  excludesfile = ~/.gitignore

[branch "master"]
  remote = origin
  merge = refs/heads/master

[credential]
  helper = !aws codecommit credential-helper $@
  UseHttpPath = true
